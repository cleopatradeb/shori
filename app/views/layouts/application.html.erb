<!DOCTYPE html>
<html ng-app="shoriApp">
<head>
  <title>AngularTest</title>
  <base href="/shori/">
  <%= stylesheet_link_tag    'application'%>
  <%= include_gon %>
  <%= javascript_include_tag 'application'%>
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.css">
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.js" %>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <%= javascript_include_tag "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js" %>
  <%= javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.3/angular-resource.min.js" %>
  <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/angular-filter/0.5.4/angular-filter.min.js" %>
  <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>

</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">
      <% if user_signed_in? %>
        <li><%= current_user.email %></li>
        <li><%= link_to "Edit Profile", edit_user_registration_path, target: "_self"%></li>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        <li><%= link_to "Browse",  "/shori/browse"%></li>
        <li><%= link_to "Dashboard",  "/shori/dashboard"%></li>
        <li><%= link_to "My Profile",  "/shori/users/#{current_user.id}"%></li>
        <% if current_user.role === "artist" %>
          <li><%= link_to "My Gallery",  "/shori/gallery/#{current_user.id}"%></li>
        <% else %>
          <li><%= link_to "My Venue", "/shori/venue/#{current_user.id}"%></li>
        <% end %>
      <% else %>
        <li><%= link_to "Login", new_user_session_path, target: "_self"%></li>
        <li><%= link_to "Sign Up", new_user_registration_path, target: "_self"%></li>
      <% end %>
    </div>
  </nav>

  <% if (current_page? new_user_session_path) || (current_page? new_user_registration_path)%>
    <%= yield %>
  <% end %>    
  <% if (current_page? edit_user_registration_path)%>
    <%= yield %>
  <% end %>  

  <ng-view></ng-view>

</body>
</html>