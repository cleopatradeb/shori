!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %base{:href => "/shori/"}
    %title Shori
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"
    = javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.3/angular-resource.min.js"
    = csrf_meta_tags
    %link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css", :rel => "stylesheet"}/
  %body{"ng-app" => "shoriApp"}
    %nav.navbar.navbar-default{:role => "navigation"}
      .container
        - if user_signed_in?
          %li= current_user.email
          %li
            %button.btn.btn-primary{"data-target" => "#editModal", "data-toggle" => "modal", :type => "button"}
              Edit
            = link_to "Edit", edit_user_registration_path, target: "_self"
          %li
            = link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li= link_to "Login", new_user_session_path, target: "_self"
          %li= link_to "Sign Up", new_user_registration_path, target: "_self"
    = yield
    - if user_signed_in?
      #editModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{"data-dismiss" => "modal", :type => "button"}
                %span{"aria-hidden" => "true"} Ã—
                %span.sr-only Close
              %h4#myModalLabel.modal-title Modal title
            .modal-body
              = render 'devise/registrations/edit'
            .modal-footer
              %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
              %button.btn.btn-primary{:type => "button"} Save changes
        = yield
    <ng-view></ng-view>
