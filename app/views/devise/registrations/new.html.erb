<h2>Sign up as Artist</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.password_field :first_name, placeholder:'Kanye' %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.password_field :last_name, placeholder:'West' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: 'kanye@west.com', autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder:'ilovemyself99', autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder:'ilovemyself99', autocomplete: "off" %>
  </div>


  <div class="field">
    <%= f.label :contact_number %><br />
    <%= f.password_field :contact_number, placeholder:'07 1234 56789' %>
  </div> 

  <div class="hidden-field">
    <% f.hidden_field :role, :value => 'artist' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
