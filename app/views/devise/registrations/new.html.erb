<div class="signup-buttons">
  <h1 class="artist-button">Artist</h1>
  <h1 class="venue-button">Venue</h1>
</div>

<div class="venue-signup">
  <h2>Sign up as Venue</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    

    <div class="field">
      <%= f.label :venue_name %><br />
      <%= f.text_field :venue_name, placeholder:'Code and Paper CafÃ©' %>
    </div>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, placeholder:'Kanye' %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, placeholder:'West' %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: 'kanye@west.com', autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder:'ilovemyself99', autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, placeholder:'ilovemyself99', autocomplete: "off" %>
    </div>

    <div class="hidden-field">
      <% f.hidden_field :role, :value => 'venue' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign My Venue Up!" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

<div class="artist-signup">
  <h2>Sign up as Artist</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.password_field :first_name, placeholder:'Kanye' %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.password_field :last_name, placeholder:'West' %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: 'kanye@west.com', autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder:'ilovemyself99', autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, placeholder:'ilovemyself99', autocomplete: "off" %>
    </div>

    <div class="hidden-field">
      <% f.hidden_field :role, :value => 'artist' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>


<script>
  $(function (){
    $('.artist-button').click(function(){
      $('.artist-signup').show();
      $('.venue-signup').hide();
    });
    $('.venue-button').click(function(){
      $('.venue-signup').show();
      $('.artist-signup').hide();
    });
  })
</script>