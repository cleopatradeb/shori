var app = angular.module('shoriApp', ['angularPayments', 'ngAnimate', 'ngRoute', 'ngResource', 'angular.filter', 'angular-datepicker', 'angular-wurfl-image-tailor', 'ngMaterial', 'ngMessages', 'checklist-model', 'monospaced.qrcode', 'wu.masonry']);

app.config(['$routeProvider', '$locationProvider', '$mdThemingProvider', '$httpProvider', function($routeProvider, $locationProvider, $mdThemingProvider, $httpProvider){
  $httpProvider.useApplyAsync(true);
  $routeProvider
  .when('/home', {
    controller: "HomeController",
    templateUrl: "<%= asset_path('home.html') %>"
  })
  .when('/dashboard', {
    controller: "DashboardController",
    templateUrl: "<%= asset_path('dashboard.html') %>"
  })
  .when('/browse', {
    controller: "BrowseController",
    templateUrl: "<%= asset_path('browse.html') %>"
  })
  .when('/users/:id', {
    controller: 'ProfileController',
    templateUrl: "<%= asset_path('profile.html') %>"
  })
  .when('/gallery/:id', {
    controller: 'GalleryController',
    templateUrl: "<%= asset_path('gallery.html') %>"
  })
  .when('/venue/:id', {
    controller: 'VenueController',
    templateUrl: "<%= asset_path('venue.html') %>"
  })
  .when('/artpiece/:id', {
    controller: 'ArtpieceController',
    templateUrl: "<%= asset_path('artpiece.html') %>"
  })
  .otherwise({
    redirectTo: '/home'
  });
  $locationProvider.html5Mode(true);

  $mdThemingProvider.definePalette('shoriPalette', {
    '50': '#EFEBE9',
    '100': '#D7CCC8',
    '200': '#BCAAA4',
    '300': '#A1887F',
    '400': '#8D6E63',
    '500': '#8D6E63',
    '600': '#8D6E63',
    '700': '#8D6E63',
    '800': '#8D6E63',
    '900': '#8D6E63',
    'A100': 'ff8a80',
    'A200': 'ff5252',
    'A400': 'ff5252',
    'A700': 'ff5252',
    'contrastDefaultColor': 'light',
    'contrastDarkColors': ['50', '100', 
     '200', '300', '400', 'A100'],
    'contrastLightColors': undefined
  });

  $mdThemingProvider.theme('default')
  .primaryPalette('shoriPalette');

  $(document).ready(function(){
    $('#cssmenu').scrollupbar();
    $('#topbar').scrollupbar();
  })
}]);
